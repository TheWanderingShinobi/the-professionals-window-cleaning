---
import { AstroSeo } from "@astrolib/seo";
const { title, description } = Astro.props;
---

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link
        href="https://fonts.googleapis.com/css2?family=Nunito&display=swap"
        rel="stylesheet"
    />

    <AstroSeo
        title={title}
        description={description}
        canonical="https://theprofessionalswindowcleaning.com/"
        openGraph={{
            url: "https://theprofessionalswindowcleaning.com/",
            title: "The Professional Window and Eave Cleaning Ltd. - Toronto Window Cleaning",
            description:
                "The Professionals Window and Eaves Cleaning Ltd. offers high-quality window and eaves cleaning services for residential and commercial properties. Our experienced professionals use state-of-the-art equipment and eco-friendly cleaning solutions to ensure a sparkling, streak-free finish every time. Trust us to enhance the appearance and longevity of your windows and eavestrough, while maintaining the safety and integrity of your property. Contact us today to schedule your appointment and experience the difference of working with The Professionals.",
            images: [
                {
                    url: "https://theprofessionalswindowcleaning.com/scarborough-eavestrough-cleaning-logo.webp",
                    width: 800,
                    height: 600,
                    alt: "company logo",
                    type: "image/webp",
                },
                {
                    url: "https://theprofessionalswindowcleaning.com/toronto-window-cleaning_1.webp",
                    width: 900,
                    height: 800,
                    alt: "window cleaning",
                    type: "image/webp",
                },
                {
                    url: "https://the-professionals-window-cleaning.pages.dev/toronto-eavestrough-cleaning.webp",
                },
                {
                    url: "https://the-professionals-window-cleaning.pages.dev/toronto-window-cleaning.webp",
                },
            ],
            site_name: "The Professional Window and Eave Cleaning Ltd.",
        }}
        twitter={{
            handle: "@TOWindowandEave",
            site: "https://twitter.com/TOWindowandEave",
            cardType: "summary_large_image",
        }}
    />
</head>
