---
import Layout from "../layouts/Layout.astro";
import HeroHome from "../components/HeroHome.astro";
import { Icon } from "astro-icon";
import Testimonals from "../components/Testimonals.astro";
import Footer from "../components/Footer.astro";
import ServicesSection from "../components/home/ServicesSection.astro";
import ContactForm from "../components/ContactForm.astro";
import IntroSection from "../components/home/IntroSection.astro";
---

<Layout title="The Professionals Window and Eaves Cleaning Ltd.">
  <HeroHome />

  <ServicesSection />

  <div class="bg-blue-900 text-white" id="hero">
    <div class="container mx-auto px-6 py-24 flex items-center">
      <div class="w-full lg:w-3/4">
        <h1 class="text-3xl font-medium mb-2">Welcome to my website</h1>
        <p class="text-lg leading-relaxed mb-8">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed a lorem
          quis neque interdum consequat ut sed sem. Duis quis tempor nunc.
          Interdum et malesuada fames ac ante ipsum primis in faucibus.
        </p>
        <button
          class="bg-transparent text-white border border-white py-2 px-4 rounded-lg hover:bg-white hover:text-gray-900"
          >Learn more</button
        >
      </div>
    </div>
  </div>
</Layout>

<IntroSection />

<Testimonals />

<ContactForm />

<Footer />
